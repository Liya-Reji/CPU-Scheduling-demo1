#include <stdio.h>

struct Process {
    char pid[5];
    int arrival;
    int burst;
    int waiting;
    int turnaround;
};

int main() {
    int n, i, j;
    int current_time = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for (i = 0; i < n; i++) {
        printf("Enter Process ID: ");
        scanf("%s", p[i].pid);
        printf("Enter Arrival Time: ");
        scanf("%d", &p[i].arrival);
        printf("Enter Burst Time: ");
        scanf("%d", &p[i].burst);
    }

    printf("\nProcess\tArrival\tBurst\tWaiting\tTurnaround\n");

    for (i = 0; i < n; i++) {
        if (current_time < p[i].arrival) {
            current_time = p[i].arrival;
        }
        p[i].waiting = current_time - p[i].arrival;
        p[i].turnaround = p[i].waiting + p[i].burst;
        current_time += p[i].burst;

        printf("%s\t%d\t%d\t%d\t%d\n", p[i].pid, p[i].arrival, p[i].burst, p[i].waiting, p[i].turnaround);
    }

    printf("\nGantt Chart:\n");

    for (i = 0; i < n; i++) {
        printf(" ");
        for (j = 0; j < p[i].burst; j++) {
            printf("=");
        }
        printf("  ");
    }
    printf("\n");

    for (i = 0; i < n; i++) {
        printf("| %s | ", p[i].pid);
    }
    printf("\n");

    for (i = 0; i < n; i++) {
        printf(" ");
        for (j = 0; j < p[i].burst; j++) {
            printf("=");
        }
        printf("  ");
    }
    printf("\n");

    int time = 0;
    printf("%d", time);
    for (i = 0; i < n; i++) {
        time += p[i].burst;
        for (j = 0; j < p[i].burst + 2; j++) {
            printf(" ");
        }
        printf("%d", time);
    }
    printf("\n");

    return 0;
}
